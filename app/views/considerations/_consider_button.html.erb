<% if logged_in? %>
  <% if current_user.consider?(tour) %>
    <%= form_with(model: current_user.considerations.find_by(tour_id: tour.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :tour_id, tour.id %>
      <%= f.submit '検討リストから外す', class: 'btn btn-danger' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.considerations.build, local: true) do |f| %>
      <%= hidden_field_tag :tour_id, tour.id %>
      <%= f.submit '検討リストに入れる', class: 'btn btn-primary' %>
    <% end %>
  <% end %>
<% end %>